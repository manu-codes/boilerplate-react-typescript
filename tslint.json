{
    "extends": ["tslint:latest", "tslint-react"],
    "rules": {
        "max-line-length": {
            "options": [220]
        },
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-console": {
            "severity": "warning",
            "options": [
                "debug",
                "info",
                "log",
                "time",
                "timeEnd",
                "trace"
            ]
        },
        
        "jsx-alignment":true,
        "jsx-wrap-multiline": true,
        "jsx-boolean-value":false,
        "jsx-curly-spacing":"always",
        "jsx-equals-spacing":"always",
        "jsx-key":true,
        "jsx-self-close":true,
        "ordered-imports":false,
        "no-implicit-dependencies":false
    },
    "jsRules": {
        "max-line-length": {
            "options": [220]
        }
    }
}
